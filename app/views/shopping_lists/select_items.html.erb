<%= form_tag add_items_path, method: :post do %>
<div class="panel panel-default" style="margin-left: 15px; margin-right: 15px">
  <div class="panel-header">
    <h3> Items Found: <%= params[:items].size %> </h3>
  </div>
  <div class=panel-body>
    <div class="panel-group">
      <% params[:items].each_with_index do |item, index| %>
      <div class="panel panel-default" style="margin-left: 15px; margin-right: 15px">
        <div class="panel-heading">
          <h3 class="panel-title">Item Number: <%= index %></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-2">
              <img src="http://placehold.it/140x140" class="img-rounded" style="width: 100px; height: 100px">
            </div>
            <div class="col-md-8">
              <div class="row">
                <div class="col-md-8">
                  Item Name: <%= item.name %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-8">
                  Item Price: <%= item.price %>
                </div>
              </div>
            </div>
            <div class="col-md-2">
              <%= check_box_tag :indexes[], params[:indexes] %>
            </div>
          </div>
        </div>
      </div>
      <hr>
      <% end %>
    </div>
  </div>
  <div class="panel-footer">
    <%= submit_tag "Add Selected Items to Shopping List", name: nil, class: "btn btn-default" %>
  </div>
</div>
<% end %>
